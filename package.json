{
  "name": "zubora",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean --yes && lerna run clean",
    "check:docs": "lerna run check:docs",
    "check:configs": "lerna run check:configs",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "format-check": "prettier --list-different \"./**/*.{ts,js,json,md}\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "postinstall": "lerna bootstrap && lerna link && lerna run build",
    "check-clean-workspace-after-install": "git diff --quiet --exit-code",
    "test": "lerna run test",
    "type-check": "lerna run type-check",
    "pre-push": "yarn clean && yarn && yarn test"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "coffeescript": "^2.5.0",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.16.4",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
    "typescript": "^3.6.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "dependencies": {
    "zubora": "file:packages/zubora",
    "zubora-cli": "file:packages/zubora-cli",
    "zubora-plugin-coffee": "file:packages/zubora-plugin-coffee"
  }
}
