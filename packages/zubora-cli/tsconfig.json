{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2015.generator",
      "es2015.iterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "inlineSourceMap": true,
    "outDir": "build",
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
