{
  "name": "zubora-cli",
  "version": "0.0.2",
  "description": "zubora CLI - Test Template Generator for zubora (\"lazy\" in Japanese) developers",
  "repository": {
    "type": "git",
    "url": "https://github.com/wataruoguchi/zubora.git"
  },
  "bugs": "https://github.com/wataruoguchi/zubora/issues",
  "homepage": "https://github.com/wataruoguchi/zubora",
  "keywords": [
    "zubora",
    "Test",
    "Unit Test",
    "TypeScript"
  ],
  "bin": {
    "zubora": "bin/zubora"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,jsx,ts,tsx,json}",
    "lint": "eslint --ignore-path ../../.gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "yarn lint --fix",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p tsconfig.build.json",
    "build": "yarn format && yarn lint && yarn clean-build && yarn compile",
    "test": "jest",
    "type-check": "tsc",
    "watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "build",
    "LICENSE",
    "README.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "figlet": "^1.2.4",
    "gluegun": "^3.3.4",
    "ts-node": "^8.4.1",
    "zubora": "^0.0.4"
  },
  "devDependencies": {
    "@babel/types": "^7.6.1",
    "@types/babel__core": "^7.1.3",
    "@types/figlet": "^1.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^10.12.12",
    "@types/prettier": "^1.18.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ]
  }
}
