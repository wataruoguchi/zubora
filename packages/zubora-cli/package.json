{
  "name": "zubora-cli",
  "version": "0.3.2",
  "description": "zubora CLI - Test Template Generator for zubora (\"lazy\" in Japanese) developers",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wataruoguchi/zubora.git"
  },
  "bugs": "https://github.com/wataruoguchi/zubora/issues",
  "homepage": "https://github.com/wataruoguchi/zubora/tree/master/packages/zubora-cli",
  "keywords": [
    "zubora",
    "Test",
    "Unit Test",
    "TypeScript",
    "JavaScript"
  ],
  "bin": {
    "zubora": "bin/zubora"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\" --ignore-path ../../.prettierignore",
    "lint": "eslint . --ext .js,.ts --ignore-path='../../.gitignore'",
    "test": "jest --coverage",
    "type-check": "tsc -p tsconfig.build.json --noEmit"
  },
  "files": [
    "tsconfig.json",
    "build",
    "LICENSE",
    "README.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@types/babel__core": "^7.1.3",
    "@types/cosmiconfig": "^6.0.0",
    "@types/figlet": "^1.2.0",
    "@types/prettier": "^1.18.2",
    "cosmiconfig": "^6.0.0",
    "figlet": "^1.2.4",
    "gluegun": "^4.0.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "zubora": "file:../zubora"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ],
    "moduleNameMapper": {
      "^zubora(.*)$": "<rootDir>/../zubora/$1"
    }
  }
}
