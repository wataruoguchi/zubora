{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "settings": { "react": { "version": "detect" } },
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ]
}
